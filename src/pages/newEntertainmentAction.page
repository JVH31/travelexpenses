<apex:page docType="html-5.0" standardController="Travel__c" extensions="NewExpenseCtrlExt" showHeader="false" action="{!createEntertainment}">

    <c:newExpense title="Entertainment" expense="{!expense}" hasMessages="{!hasMessages}" theme="default" noOptions="true">
        
        <c:entertainmentInfo expense="{!expense}" theme="default"/>
        <c:bill expense="{!expense}" theme="default"/>
        
        <center>
            <apex:commandButton value="Save" action="{!doSaveExpense}" oncomplete="closePublisher({!hasMessages})" rerender="form" styleClass="btn-lg btn-success" style="width:100%;"/>
        </center>
        
        <br/><br/><br/>
        
    </c:newExpense>
</apex:page>
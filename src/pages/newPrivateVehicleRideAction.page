<apex:page docType="html-5.0" standardController="Travel__c" extensions="LocationFinder,NewExpenseCtrlExt" showHeader="false" action="{!createPrivateVehicleRide}">
	
    <c:newExpense title="Private Vehicle Ride" expense="{!expense}" hasMessages="{!hasMessages}" theme="default" limitSearch="true">
        
        <c:movements expense="{!expense}" title="Private Vehicle Ride" theme="default" locale="{!UserLocale}" />
        <c:rideDetails expense="{!expense}" theme="default" vehicles="{!vehicles}"/>
        
        <center>
            <apex:commandButton value="Save" action="{!doSaveExpense}" oncomplete="closePublisher({!hasMessages})" rerender="form" styleClass="btn-lg btn-success" style="width:100%;"/>
        </center>
        
        <br/><br/><br/>
        
    </c:newExpense>
</apex:page>
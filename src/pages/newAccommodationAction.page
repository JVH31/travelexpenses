<apex:page docType="html-5.0" standardController="Travel__c" extensions="NewExpenseCtrlExt" showHeader="false" action="{!createAccommodation}">

    <c:newExpense title="Accommodation" expense="{!expense}" hasMessages="{!hasMessages}" theme="default" noOptions="true">
    
        <c:lodgingInfo expense="{!expense}" theme="default"/>
        <c:cost expense="{!expense}" title="Overall Cost" theme="default"/>
                
        <center>
            <apex:commandButton value="Save" action="{!doSaveExpense}" oncomplete="closePublisher({!hasMessages})" rerender="form" styleClass="btn-lg btn-success" style="width:100%;"/>
        </center>
        
        <br/><br/><br/>
        
    </c:newExpense>
</apex:page>